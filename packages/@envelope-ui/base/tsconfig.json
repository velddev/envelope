{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2019", "dom"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/**.ts*", "node_modules/@envelope-ui/*"],
  "exclude": ["build/", "node_modules/", "**/*.test.ts*"]
}
